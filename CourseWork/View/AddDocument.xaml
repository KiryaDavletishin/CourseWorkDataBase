<Window x:Class="CourseWork.View.AddDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.View"
        mc:Ignorable="d"
        Title="AddDocument" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Code Category"/>
            <TextBox Name="CodeCategoryBox"/>
            <TextBlock Text="Title"/>
            <TextBox Name="TitleBox"/>
            <TextBlock Text="Description"/>
            <TextBox Name="DescriptionBox"/>
            <TextBlock Text="Year Creation"/>
            <TextBox Name="YearCreationBox"/>
            <TextBlock Text="Author"/>
            <TextBox Name="AuthorBox"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add Document" Click="Button_Click"/>
    </Grid>
</Window>
